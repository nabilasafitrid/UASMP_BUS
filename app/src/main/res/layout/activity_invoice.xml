<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Invoice"
    android:background="#9932CC">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#A9A9A9"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:background="#FFFFFF"
            android:text="INVOICE BUZZEE"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="35dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DAA520">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Ditagihkan kepada : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="17dp"
            android:text="06/07/2021"
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/date4view"/>
        <TextView
            android:layout_marginTop="0dp"
            android:layout_marginLeft="17dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nama pemesan"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/nama3view"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="#A9A9A9"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="17dp"
            android:text="Deskripsi"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:backgroundTint="#DAA520"/>
        <TextView
            android:backgroundTint="#DAA520"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A9A9A9"
            android:layout_marginTop="17dp"
            android:text="Harga"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:text="BDG"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="0dp"
            android:id="@+id/from3view"
            android:gravity="center"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="->"
            android:textColor="#000000"
            android:textSize="18dp"
            android:gravity="center"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="JKT"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:id="@+id/des3view"
            android:gravity="center"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:text="17:50"
            android:textColor="#000000"
            android:layout_marginTop="0dp"
            android:textSize="18dp"
            android:id="@+id/waktu_bisber5"
            android:gravity="center"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rp.100.000"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:id="@+id/harga_bis5"
            android:gravity="center"
            android:background="#FFFFFF"/>

    </LinearLayout>

